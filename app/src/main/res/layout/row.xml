<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bar_row_clicked"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2.5dp"
    android:src="@drawable/ripple">



    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ripple"
        app:layout_heightPercent="75%"
        app:layout_widthPercent="25%"
        android:id="@+id/image_holder"
        android:gravity="center"
        android:padding="1.3dp"
        android:background="@color/black">

        <ImageView
            android:background="@drawable/temp3"
            android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/details"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image_holder"
        app:layout_widthPercent="55%">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:text="Aura"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_below="@+id/name"
            android:text="Address: Nehru Enclave, Gomti Nagar"
            android:textColor="#979797"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_below="@+id/address"
            android:text="Hours: Open Today - 12PM - 12 AM"
            android:textColor="#979797"
            android:textSize="12sp" />


    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/details"
        android:background="#cdcdcd" />

    <ImageView
        android:id="@+id/call"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/line"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="true"
        android:src="@drawable/phone_3"
        app:layout_widthPercent="18%" />


</android.support.percent.PercentRelativeLayout>